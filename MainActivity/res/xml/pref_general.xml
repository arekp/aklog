<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="utm_checkbox"
        android:summary="@string/pref_description_social_recommendations"
        android:title="@string/pref_title_social_recommendations" />
  <CheckBoxPreference 
      android:key="screen_off" 
      android:summary="@string/pref_description_screen_off" 
      android:title="@string/pref_title_screen_off" 
      android:defaultValue="true"/>
  
    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_display_katalog"
        android:inputType="textCapWords"
        android:key="katalog"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_display_katalog" />
    
      <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_display_plik"
        android:inputType="textCapWords"
        android:key="plik"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_display_plik" />
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_display_qth"
        android:inputType="textCapWords"
        android:key="qth"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_display_qth" />
    
    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. 
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:key="example_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_add_friends_to_messages" />
-->
    
</PreferenceScreen>
